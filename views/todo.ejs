<!doctype html>
<html>
	<head>
		<script src="http://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
		<meta charset="utf-8">
		<link rel="stylesheet" href="/assets/styles.css" type="text/css"/>
		<title><%= user.firstname %> Stuff To Do</title>
	</head>
	<body>
		<h1><%= user.firstname %>TO-Do list</h1>
		<div id = "todo-table">
			<form>
				<input type="text" name="item" placeholder="Add Stuff..." required>
				<button id = "btn" type="submit">Add Item</button>
			</form>
			<ul>
				<% for(i = 0; i < todos.length; i++){ %>

					<li id="<%= todos[i].id %>"><%= todos[i].item %></li>

				<% } %>
			</ul>
		</div>
	</body>
	<script src="/assets/todo-list.js" type="text/javascript"></script>
</html>
